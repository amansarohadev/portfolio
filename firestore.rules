rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Messages collection - anyone can create, only authenticated admin can read
    match /messages/{messageId} {
      allow create: if true;  // Anyone can submit contact form
      allow read, update, delete: if request.auth != null;  // Only logged in admin can read/modify
    }
    
    // Page views - anyone can create, only authenticated admin can read
    match /pageViews/{viewId} {
      allow create: if true;  // Track anyone's page view
      allow read: if request.auth != null;  // Only admin can see analytics
      allow update, delete: if false;  // No one can modify/delete
    }
    
    // Resume downloads - anyone can create, only authenticated admin can read
    match /resumeDownloads/{downloadId} {
      allow create: if true;  // Track anyone's download
      allow read: if request.auth != null;  // Only admin can see
      allow update, delete: if false;  // No one can modify/delete
    }
    
    // Analytics counters - anyone can read/write for counters
    match /analytics/{dateId} {
      allow read, write: if true;  // Need write for incrementing counters
    }
    
    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
